%h2= t('edit_user')
%form(action="/admin/users/#{@user.id}" method="post")
  %input(type="hidden" name="_method" value="put")
  = partial 'users/form'
  %p
    %input(type="submit" value="#{t('edit')}")
- providers.each do |provider|
  = (link_to t("multi_login.#{provider}.add"), "/login/#{provider}") if send("#{provider}_on?") && @user == current_user && !@user.send("is_#{provider}_user?")
